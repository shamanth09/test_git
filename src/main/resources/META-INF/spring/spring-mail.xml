<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">
	<context:property-placeholder location="classpath:/META-INF/mail.properties"
		ignore-unresolvable="true" />

	<!-- Mail Sender -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl"
		scope="">
		<property name="host" value="${mail.host}"></property>
		<property name="port" value="${mail.port}"></property>
		<property name="username" value="${mail.username}"></property>
		<property name="password" value="${mail.password}"></property>
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">false</prop>
				<prop key="mail.smtp.quitwait">false</prop>
				<prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
				<prop key="mail.smtp.socketFactory.fallback">true</prop>
				<prop key="mail.debug">false</prop>
			</props>
		</property>
	</bean>

	<!-- Mail Message -->
	<bean id="orderMessage" class="com.mrk.myordershop.bean.mail.OrderMessage"
		scope="prototype">
		<property name="from" value="${mail.username}"></property>
	</bean>
	<bean id="wholesalerOrderMessage" class="com.mrk.myordershop.bean.mail.WholesalerOrderMessage"
		scope="prototype">
		<property name="from" value="${mail.username}"></property>
	</bean>
	<bean id="activationMessage" class="com.mrk.myordershop.bean.mail.ActivationMessage"
		scope="prototype">
		<property name="from" value="${mail.username}"></property>
	</bean>
	<bean id="forgotPasswordMessage" class="com.mrk.myordershop.bean.mail.ForgotPasswordMessage"
		scope="prototype">
		<property name="from" value="${mail.username}"></property>
	</bean>

	<bean id="loginAttemptMessage" class="com.mrk.myordershop.bean.mail.LoginAttemptMessage"
		scope="prototype">
		<property name="from" value="${mail.username}"></property>
	</bean>

	<!-- Message Factory -->
	<bean id="mailMessageFactory" class="com.mrk.myordershop.bean.mail.MailMessageFactory">
		<lookup-method name="getOrderMessage" bean="orderMessage" />
		<lookup-method name="getWholesalerOrderMessage" bean="wholesalerOrderMessage" />
		<lookup-method name="getActivationMessage" bean="activationMessage" />
		<lookup-method name="getForgotPasswordMessage" bean="forgotPasswordMessage" />
		<lookup-method name="getLoginAttemptMessage" bean="loginAttemptMessage" />
	</bean>
</beans>