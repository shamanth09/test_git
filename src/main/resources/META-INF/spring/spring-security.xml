<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security.xsd
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<http pattern="/resources/**" security="none"></http>
	<http entry-point-ref="loginEntryPoint" create-session="never"
		pattern="/go/**" authentication-manager-ref="authenticationManager" use-expressions="true">

		<intercept-url pattern="/go/**" access="hasRole('IS_AUTHENTICATED_ANONYMOUSLY')" />
		<access-denied-handler ref="customAccessDeniedHandler" />
	</http>

	<http entry-point-ref="loginEntryPoint" create-session="ifRequired"
		pattern="/v1/**" authentication-manager-ref="authenticationManager" use-expressions="true">

		<intercept-url pattern="/v1/rt/**" access="hasRole('ROLE_RETAIL')" />
		<intercept-url pattern="/v1/ws/**" access="hasRole('ROLE_WSALER')" />
		<intercept-url pattern="/v1/sp/**" access="hasRole('ROLE_SUPPLIER')" />
		<intercept-url pattern="/v1/**" access="hasRole('IS_AUTHENTICATED_ANONYMOUSLY')" />

		<!-- <form-login login-processing-url="/v1/login.do" authentication-failure-handler-ref="failureHandler" 
			default-target-url="/home" login-page="/login" password-parameter="password" 
			username-parameter="username" authentication-success-handler-ref="successHandler" 
			/> -->
		<access-denied-handler ref="customAccessDeniedHandler" />
		<logout logout-success-url="" logout-url="/v1/logout.do"
			invalidate-session="true" delete-cookies="JSESSIONID" />

		<custom-filter position="FORM_LOGIN_FILTER"
			ref="customUsernamePasswordAuthenticationFilter" />
		<session-management>
			<concurrency-control expired-url="/v1/home"
				max-sessions="1" />
		</session-management>
	</http>

	<authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="userDetailsService">
		</authentication-provider>
	</authentication-manager>

	<!-- Custom Session Management Filter -->
	<!-- <beans:bean id="customSessionManagementFilter" class="com.mrk.myordershop.security.service.CustomSessionManagementFilter"> 
		<beans:constructor-arg> <beans:bean id="securityContextRepository" class="org.springframework.security.web.context.HttpSessionSecurityContextRepository" 
		/> </beans:constructor-arg> </beans:bean> -->

	<!-- User Details Service -->
	<beans:bean id="userDetailsService"
		class="com.mrk.myordershop.security.service.CustomUserDetailsService"></beans:bean>

	<!-- AccessDeniedHandler -->
	<beans:bean id="customAccessDeniedHandler"
		class="com.mrk.myordershop.security.service.CustomAccessDeniedHandler">
	</beans:bean>

	<!-- Custom Filter Bean -->
	<beans:bean id="customUsernamePasswordAuthenticationFilter"
		class="com.mrk.myordershop.security.service.CustomUsernamePasswordAuthenticationFilter">
		<beans:property name="authenticationManager" ref="authenticationManager"></beans:property>
		<beans:property name="filterProcessesUrl" value="/v1/login.do" />
		<beans:property name="usernameParameter" value="username" />
		<beans:property name="passwordParameter" value="password" />
		<beans:property name="authenticationFailureHandler"
			ref="failureHandler"></beans:property>
		<beans:property name="authenticationSuccessHandler"
			ref="successHandler"></beans:property>
	</beans:bean>

	<!-- Success and Failure Handler -->
	<beans:bean id="failureHandler"
		class="com.mrk.myordershop.security.service.CustomSimpleUrlAuthenticationFailureHandler">
		<beans:property name="defaultFailureUrl" value="/go/login/invalid" />
	</beans:bean>
	<beans:bean id="successHandler"
		class="com.mrk.myordershop.security.service.CustomSimpleUrlAuthenticationSuccessHandler">
		<beans:property name="alwaysUseDefaultTargetUrl" value="false" />
		<beans:property name="defaultTargetUrl" value="/v1/home" />
		<beans:property name="useReferer" value="true" />
	</beans:bean>

	<!-- Entry Point -->
	<beans:bean id="loginEntryPoint"
		class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint">
		<beans:constructor-arg name="loginFormUrl"
			value="/go/login" />
	</beans:bean>
</beans:beans>