<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- for admin view -->
	
	<definition name="admin/title/**" template="/admin/{1} :: title" />
	<definition name="admin/header" template="/admin/partial/header" />
	<definition name="admin/menu" template="/admin/partial/menu" />
	<definition name="admin/footer" template="/admin/partial/footer" />
	<definition name="admin/content/**" template="/admin/{1} :: content" />


	<definition name="admin/*/xhr/**" template="/admin/{1}/xhr/{2}" />
	<definition name="admin/**" template="/admin/partial/layout">
		<put-attribute name="header" value="admin/header" />
		<put-attribute name="menu" value="admin/menu" />
		<put-attribute name="footer" value="admin/footer" />
		<put-attribute name="title" value="admin/title/{1}" />
		<put-attribute name="content" value="admin/content/{1}" />
	</definition>
	
	<!-- for common view -->
	
	<definition name="common/title/**" template="/common/{1} :: title" />
	<definition name="common/header" template="/common/partial/header" />
	<definition name="common/footer" template="/common/partial/footer" />
	<definition name="common/content/**" template="/common/{1} :: content" />

	<definition name="app/**" template="/common/partial/layout">
		<put-attribute name="header" value="common/header" />
		<put-attribute name="footer" value="common/footer" />
		<put-attribute name="title" value="common/title/{1}" />
		<put-attribute name="content" value="common/content/{1}" />
	</definition>


</tiles-definitions>